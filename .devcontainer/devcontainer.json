{
  "name": "Family Quiz",
  "service": "app",
  "workspaceFolder": "/app",
  "dockerComposeFile": "../docker-compose.yml",
  "forwardPorts": [3000, 5432, 5555],
  "portsAttributes": {
    "3000": { "label": "App (NextJS)" },
    "5432": { "label": "Database" },
    "5555": { "label": "Prisma Studio" }
  },
  "customizations": {
    "vscode": {
      "settings": { 
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "prisma.prisma",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "npm install && npx prisma generate",
  "initializeCommand": "echo 'Setting up Family Quiz environment...'",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "remoteEnv": {
    "NODE_ENV": "development",
    "DATABASE_URL": "postgresql://postgres:password@db:5432/admin"
  }
}

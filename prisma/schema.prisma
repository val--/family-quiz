datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model Quiz {
  id        Int       @id @default(autoincrement())
  provider  String
  author    String
  theme     String
  questions Question[]
}

model Question {
  id        Int      @id @default(autoincrement())
  quizId    Int
  question  String
  anecdote  String?
  answers   Answer[]
  quiz      Quiz     @relation(fields: [quizId], references: [id])

  @@index([quizId])
}

model Answer {
  id         Int      @id @default(autoincrement())
  questionId Int
  answer     String
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])

  @@index([questionId])
}
